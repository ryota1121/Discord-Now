<div class="row justify-content-center">
  <div class="Registration card my-5">
    <div class="m-2">
<h6>パスワードをお忘れですか？</h6>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text_field", placeholder: "Eメール" %>
  </div>

  <div class="mt-2 actions">
    <%= f.submit "パスワードのリセット手順を送信", class: "text_field btn btn-warning" %>
  </div>
<% end %>
</div>
</div>
</div>
