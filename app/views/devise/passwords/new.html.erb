<div class="pb-3">
  <h2>パスワードをお忘れですか？</h2>
  <%= render "devise/shared/error_messages", resource: resource %>
</div>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="row">
    <div class="col-4 pb-3">
      <label class="form-label">Email</label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Eメール" %>
    </div>
    <div class="col-12">
      <%= f.submit "パスワードのリセット手順を送信", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
