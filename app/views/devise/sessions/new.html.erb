<div class="row p-2 my-4 bg-info">
<h2>ログイン</h2>

<%= form_with model: @user, url: user_session_path do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %><%= link_to "パスワードを忘れた方", new_password_path(resource_name) %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="mt-2 actions">
    <%= f.submit "ログイン", class: "btn btn-outline-success" %>
  </div>
<% end %>

<div class="mt-2">
<%= link_to "新規登録", new_registration_path(resource_name), class: "btn btn-outline-success"  %>
</div>
</div>
