<div class="row justify-content-center">
    <div class="col-lg-2 p-2 my-4">
      <h2>ログイン</h2>
      
      <%= form_with model: @user, url: user_session_path do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text_field", placeholder: "Eメール" %>
      </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", class: "text_field", placeholder: "パスワード" %>
    <%= link_to "パスワードを忘れた方はこちら", new_password_path(resource_name) %>
  </div>

  <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
  <% end %>

  <div class="mt-2 actions">
    <%= f.submit "ログイン", class: "text_field btn btn-success" %>
  </div>
<% end %>

<div class="mt-2 actions">
<%= link_to "新規登録", new_registration_path(resource_name), class: "text_field btn btn-danger"  %>
</div>

</div>
</div>
</div>
