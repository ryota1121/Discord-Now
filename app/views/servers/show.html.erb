<div class="container-fluid">
  <div class="responsive-center row">
    <div class="col-auto p-0 mb-3">
      <%= render 'servers/server', server: @server %>
    </div>
    <div class="col-xxl p-0" style="width:100%">
      <div class="mb-3 p-3 w-80 shadow" style="background-color: rgba(0, 0, 0, 0.03)">
        <% if current_user %>
          <div>
            <%= form_with model: [@server, @server_comment] do |f| %>
              <div class="d-flex">
                <div class="comment pe-2" style="width:100%">
                  <%= f.text_area :comment, rows: '1', class: "form-control",  placeholder: "コメントをここに入力" %>
                </div>
                <div>
                  <%= f.submit "送信する", class: "btn btn-warning" %>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>

        <p class="pt-2">コメント件数：<%= @server.server_comments.count %></p>
        <% @server.server_comments.each do |server_comment| %>
          <div class="pb-3 d-flex">
            <div class="d-flex">
              <div class="pe-2">
                <%= image_tag server_comment.user.get_profile_image(50,50) %>
              </div>
              <div class="align-self-center">
                <p class="m-0"><%= server_comment.created_at.strftime('%Y/%m/%d/%H:%M') %></p>
                <div class="d-flex">
                  <p class="m-0 pe-3"><%= server_comment.user.name %></p>
                  <div>
                  <p class="m-0" style="word-break:break-all"><%= server_comment.comment %></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
