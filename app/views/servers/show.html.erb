<div class="container-fluid">
  <div class="row">
    <div class="show-card col-sm-auto p-0 mb-3">
      <%= render 'servers/server', server: @server %>
      <% if @server.user == current_user %>
      <div class="d-flex justify-content-center" style="width:21rem">
        <div class="pe-1 shadow" style="width:100%">
          <%= link_to "投稿編集", edit_server_path(@server.id), class:"btn btn-dark",style:"width:100%" %>
        </div>
        <div class="ps-1 shadow" style="width:100%">
        <%= link_to "投稿削除", server_path(@server.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-dark",style:"width:100%" %>
        </div>
      </div>
      <% end %>
    </div>
    <div class="col-xxl p-0" style="width:100%">
      <div class="mb-3 p-3 w-80 shadow" style="background-color: rgba(0, 0, 0, 0.03)">
        <% if current_user %>
          <div>
            <%= form_with model: [@server, @server_comment] do |f| %>
              <div class="d-flex">
                <div class="comment pe-2" style="width:100%">
                  <%= f.text_area :comment, rows: '1', class: "form-control",  placeholder: "コメントをここに入力" %>
                </div>
                <div>
                  <%= f.submit "送信する", class: "btn btn-dark" %>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>

        <p class="pt-2">コメント件数：<%= @server.server_comments.count %></p>
        <% @server.server_comments.each do |server_comment| %>
          <div class="pb-3 d-flex">
            <div class="d-flex">
              <div class="pe-2">
                <%= image_tag server_comment.user.get_profile_image(50,50) %>
              </div>
              <div class="align-self-center">
                <p class="m-0"><%= server_comment.created_at.strftime('%Y/%m/%d/%H:%M') %></p>
                <div class="d-flex">
                  <p class="m-0 pe-3"><%= server_comment.user.name %></p>
                  <div>
                  <p class="m-0" style="word-break:break-all"><%= server_comment.comment %></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  const inviteButton = document.getElementById('inviteButton')
  inviteButton.addEventListener('click', (e) => {
    const url = e.target.dataset.url
    navigator.clipboard.writeText(url)
    alert('コピーしました！')
  })
</script>