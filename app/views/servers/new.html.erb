<h1>新規投稿</h1>
<% if @server.errors.any? %>
  <%= @server.errors.count %>件のエラーが発生しました
  <ul>
    <% @server.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @server, url: '/servers', method: :post do |f| %>
  <h4>ゲーム名</h4>
  <%= f.text_field :game_name %>

  <h4>サーバー名</h4>
  <%= f.text_field :server_name %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>コメント</h4>
  <%= f.text_area :body %>

  <%= f.submit '投稿' %>
<% end %>
