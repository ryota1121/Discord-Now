<% if current_user && current_user.favorite?(server) %>
  <%= link_to server_favorite_path(server.id), method: :delete, class:"text-light", style: "text-decoration:none;" do %>
    <p class="card-link m-0 d-flex justify-content-center rounded-pill bg-primary">参加を取りやめる</p>
  <% end %>
<% else %>
  <%= link_to server_favorite_path(server.id), method: :post, class:"text-light", style: "text-decoration:none;" do %>
    <p class="card-link m-0 d-flex justify-content-center rounded-pill bg-danger">参加する</p>
  <% end %>
<% end %>