<%= content_for(:bg_area) do %>
  <div class="bg_area row">
    <div class="bg_area_text col display-3 align-self-center">
      Game Nowで一緒にゲームをする仲間を見つけよう！
    </div>
  </div>

  <div class="hedder_bar row text-center m-0 text-light ">
    <h2 class="col-lg-auto m-0 p-0">
      仲間を募集してみよう！
    </h2>
    <h2 class="col-lg-auto m-0 p-0">
      <%= link_to new_server_path, class: "main_link badge rounded-pill" do %>
        投稿してみる
      <% end %>
    </h2>
  </div>
<% end %>

<div class="p-4">
  <div class="pb-4">
    <h3>
      現在、仲間募集中のゲーム
    </h3>
    <div class="overflow-auto d-flex">
      <% if @game_names.empty? %>
        <div class="game_tag">
          現在、募集中の<br>
          ゲームはありません
        </div>
      <% else %>
        <% @game_names.each do | game_name | %>
            <%= link_to servers_path(game_name: game_name), class: "game_tag me-4", style: "text-decoration:none;" do %>
              <p class="m-0 text-light"><%= game_name %></p>
            <% end %>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="data p">
    <h3>
      Game Nowでよくプレイされるゲーム
    </h3>
  </div>
</div>

<style>
.bg_area {
  background-image: url(<%= asset_path('sample.png') %>);
  height: 300px;
  background-size: cover;
}

.bg_area_text {
  color: white;
  text-align: center;
}

.hedder_bar {
  height: 100px;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #d74339;
}

.main_link {
  color: #d74339;
  background-color: white;
}

.active_bar {
  height: 100px;
  background: gray;
  text-align: center;
  padding-top: 20px;
}

.game_tag {
  height: 100px;
  width: 200px;
  border-radius: 10px;
  background: gray;
  flex-shrink: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20px;
  color: white;
}
</style>