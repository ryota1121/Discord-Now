<div class="container-fluid">
  <div class="row mb-4">
    <h2 class="fw-bold px-0 pb-2 m-0 border-bottom">
      Game Nowランキング(Top10)
    </h2>
  </div>
  <div class="row">
    <div class="ranking col-xl-6">
      <h5 class="fw-bold">
        Game Nowでよくプレイされるゲーム
      </h5>
      <div class="table-responsive">
        <table class="table">
          <thead class="table">
            <tr>
              <th scope="col">順位</th>
              <th scope="col">ゲーム名</th>
              <th scope="col">回数</th>
            </tr>
          </thead>
          <tbody>
            <% @game_rank.each.with_index(1) do |data, i| %>
              <tr>
                <th scope="row"><%= i %>位</th>
                <td><%= link_to data.first, servers_path(game_name: data.first), class:"text-black", style:"text-decoration:none;" %></td>
                <td><%= data.last %>回</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="ranking col-xl-6">
      <h5 class="fw-bold">
        Game Nowによく投稿してくれるユーザー
      </h5>
      <div class="table-responsive">
        <table class="table">
          <thead class="table">
            <tr>
              <th scope="col">順位</th>
              <th scope="col">ユーザー名</th>
              <th scope="col">回数</th>
            </tr>
          </thead>
          <tbody>
            <% @user_rank.each.with_index(1) do |user, i| %>
                <tr>
                  <th scope="row"><%= i %>位</th>
                  <td><%= user.name %></td>
                  <td><%= user.servers.size %>回</td>
                </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
