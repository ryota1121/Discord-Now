<div class="p-4">
<div class="row px-auto">
<div class="col p-0 pb-4 d-flex">
  <%= image_tag @user.get_profile_image(100,100) %>
  <div class="px-5 d-flex align-self-center">
    <h2 class="pe-5"><%= @user.name %>のページ</h2>
    <p class=""><%= link_to "プロフィール画像編集", edit_user_path(@user), class: "btn btn-success align-self-end" %></p>
  </div>
</div>
</div>

<div class="row justify-content-center">
<% @servers.each do |server| %>
<div class="card mx-4 mb-5 p-0" style="width: 30rem;">
    <div class="card-header d-flex">
      <%= image_tag server.user.get_profile_image(50,50) ,class:"pe-2"%>
      <div class="">
        <h5 class="card-title m-0"><%= server.title %></h5>
        <span class="badge bg-secondary text-light"><%= server.game_name %></span>
        <span class="badge bg-secondary text-light"><%= server.tool %></span>
      </div>
    </div>
    <div class="card-body pt-0">
    <div class="card-text overflow-auto my-2"><%= server.body %></div>
    <div class="d-flex justify-content-between">
      <a href="<%= server.link %>" class="btn btn-danger">Go somewhere</a>
      <div class="justify-content-end">
        <%= link_to "編集", edit_server_path(server.id), class: "btn btn-success" %>
        <%= link_to "削除", server_path(server.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
      </div>
    </div>
    </div>
  </div>
<% end %>
</div>
<div class="justify-content-center">
    <%= paginate @servers %>
  </div>
  </div>