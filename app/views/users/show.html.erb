<div class="container">
<div class="row justify-content-center">
<div class="now_bg col my-5 p-2 d-flex">
  <%= image_tag @user.get_profile_image(100,100) %>
  <div class="px-5 d-flex align-self-center">
    <h2 class=""><%= @user.name %></h2>
    <p class=""><%= link_to "プロフィール編集", edit_user_path(@user), class: "btn btn-success align-self-end" %></p>
  </div>
</div>
</div>

<div class="row">
    <% @servers.each do |server| %>
    <span class="col-6 mb-5">
      <div class="d-flex p-1 bg-info">
        <div class="pe-2">
          <%= image_tag server.user.get_profile_image(50,50) %>
        </div>
        <div>
          <span><%= server.title %></span><br>
          <span class="badge bg-secondary text-light"><%= server.game_name %></span>
        </div>
        <div class="align-self-center">
          <%= link_to "編集", edit_server_path(server.id), class: "btn btn-success" %>
          <%= link_to "削除", server_path(server.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
        </div>
      </div>
      <div class="server_main">
        <div class="p-1 bg-info-subtle">
          <div><%= server.body %></div>
        </div>
      </div>
    </span>
    <% end %>
  </div>
  </div>