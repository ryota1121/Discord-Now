<div class="container">
  <div class="row my-4">
<h2>プロフィール編集</h2>
<div class="now_bg col mb-5 p-3">
<%= form_with model: @user do |f| %>
<div class="row pb-2">
  <label for="inputImage">プロフィール画像</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
</div>
<div class="row pb-2">
  <label for="inputName">ユーザー名</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
</div>
  <%= f.submit "変更を保存", class: "now_btn btn" %>
<% end %>
</div>
</div>
</div>