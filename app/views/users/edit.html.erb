<div class="container-fluid">
  <div class="row pb-4">
    <div class="col p-0">
      <h2>プロフィール画像編集</h2>
      <p class="m-0 p-0">プロフィール画像のみ変更することができます</p>
    </div>
  </div>
    
  <%= form_with model: @user do |f| %>
  <div class="row p-0">
    <div class="col pe-0 ps-0 pb-2">
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
    </div>
    <span class="col-lg-auto pb-4 ps-0 align-self-center">
    <%= f.submit "変更を保存", class: "btn btn-warning" %>
    </span>
  </div>
  <% end %>
</div>